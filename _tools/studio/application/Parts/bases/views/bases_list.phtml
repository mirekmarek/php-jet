<?php
namespace JetStudio;

use Jet\UI;
use Jet\Tr;

?>
<table class="table table-striped">
	<tbody>
	<?php

	foreach( Bases::getBases() as $base ): ?>
		<tr>
			<td nowrap="" class="<?= ($base->getId() == Bases::getCurrentBaseId()) ? 'bg-info' : '' ?>">
				<div>
					<?php if( $base->getId() == Bases::getCurrentBaseId() ): ?>
						<strong><?= $base->getName() ?></strong>
					<?php else: ?>
						<a href="<?= Bases::getActionUrl( '', [], $base->getId() ) ?>"><?= $base->getName() ?></a>
					<?php endif; ?>
				</div>
				<div style="font-weight: bolder;font-size: 14px;">
					<?php
					if( !$base->getIsActive() ):
						echo '<span class="badge badge-danger">';
						echo UI::icon( 'times' )->setTitle( Tr::_( 'Is not active' ) );
						echo '</span>';
					else:
						echo '<span class="badge badge-success">';
						echo UI::icon( 'check' )->setTitle( Tr::_( 'Is active' ) );
						echo '</span>';
					endif;
					if( $base->getIsDefault() ): echo '&nbsp;&nbsp;' . Tr::_( 'default' ); endif;
					if( $base->getIsSecret() ): echo '&nbsp;&nbsp;' . UI::icon( 'user-secret' )->setTitle( Tr::_( 'Is secret' ) ); endif;
					if( $base->getSSLRequired() ): echo '&nbsp;&nbsp;' . UI::icon( 'lock' )->setTitle( Tr::_( 'SSL required' ) ); endif;

					foreach( $base->getLocales() as $locale ) {
						$ld_data = $base->getLocalizedData( $locale );

						echo '&nbsp;&nbsp;&nbsp;&nbsp;';

						if( !$ld_data->getIsActive() ):
							echo '<span class="badge badge-danger">';
							echo UI::icon( 'times' )->setTitle( Tr::_( 'Locale is not active' ) );
							echo '&nbsp;&nbsp;';
							echo UI::flag( $locale );
						else:
							echo '<span class="badge badge-success">';
							echo UI::icon( 'check' )->setTitle( Tr::_( 'Locale is active' ) );
							echo '&nbsp;&nbsp;';
							echo UI::flag( $locale );
						endif;
						if( !$base->getSSLRequired() ):
							if( $ld_data->getSSLRequired() ): echo '&nbsp;&nbsp;' . UI::icon( 'lock' )->setTitle( Tr::_( 'Locale requires SSL' ) ); endif;
						endif;
						echo '</span>';


					}
					?>
				</div>
			</td>
		</tr>
	<?php endforeach; ?>
	</tbody>
</table>

