<?php
namespace JetApplication;

use Jet\Form;
use Jet\Mailing;
use Jet\Mvc_Site;
use Jet\Mvc_View;
use Jet\Tr;
use Jet\UI;

/**
 * @var Mvc_View $this
 * @var Form     $form
 */


$form = $this->getRaw( 'form' );
$form->setDefaultLabelWidth( [ Form::LJ_SIZE_MEDIUM => 1 ] );
$config = Mailing::getConfig(true);
?>
<h3><?=Tr::_( 'Set the mail sender' )?></h3>
<?=$form->start()?>

<?php foreach( Mvc_Site::loadSites() as $site ): ?>

<fieldset>
<legend><?=$site->getName()?></legend>

	<?php foreach( $site->getLocales() as $locale ):
		$key = str_replace(':', '_', $config->getSenderKey( $locale, $site->getId(), '' ));
		?>
	<fieldset style="padding-left: 60px;">
		<legend><?=UI::flag($locale)?> <?=$locale->getName();?></legend>

		<?=$form->field( '/'.$key.'/email' )?>
		<?=$form->field( '/'.$key.'/name' )?>
	</fieldset>
	<?php endforeach; ?>
</fieldset>
<?php endforeach; ?>

<?=Installer::buttonNext()?>

<?=$form->end()?>
