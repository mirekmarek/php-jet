<?php

use Jet\UI_button;
use Jet\UI;
use Jet\MVC_View;

/**
 * @var MVC_View $this
 * @var UI_button $b
 */
$b = $this->getRaw( 'element' );

if( !$b->getLabel() ) {
	$b->setLabel( UI::_( 'Edit' ) );
}

if( !$b->getIcon() ) {
	$b->setIcon( 'edit' );
}

if( !$b->getClass() ) {
	$b->setClass( UI_button::CLASS_LIGHT );
}

require '_common.phtml';
