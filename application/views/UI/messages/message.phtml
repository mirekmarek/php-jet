<?php
use JetUI\messages_message;
use JetUI\messages;
use JetUI\UI;
use Jet\Mvc_View;

/**
 * @var Mvc_View $this
 * @var messages_message $m
 */
$m = $this->getRaw( 'element' );

$icon = $m->getIcon();

if(!$icon) {
	$icons_map = [
		messages::C_INFO    => 'info-circle',
		messages::C_SUCCESS => 'thumbs-up',
		messages::C_WARNING => 'exclamation-circle',
		messages::C_DANGER => 'thumbs-down',
	];

	$icon = $icons_map[$m->getClass()];
}

?>
<div class="alert alert-<?=$m->getClass()?>" role="alert">
	<?php
	echo UI::icon($icon);

	if($m->getIsCloseable()):
		?><button type="button" class="close" data-dismiss="alert" aria-label=""><span aria-hidden="true">&times;</span></button><?php
	endif; ?>
	<?=$m->getMessage()?>
</div>