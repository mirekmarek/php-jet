<?php
namespace JetApplicationModule\Content\Images;

use Jet\Mvc_View;

/**
 * @var Mvc_View                     $this
 * @var Gallery[]                    $galleries
 * @var Gallery                      $gallery
 * @var Controller_Admin_Router $router
 */
$galleries = $this->getRaw( 'galleries' );
$current_gallery = $this->getRaw( 'gallery' );
$router = $this->getController()->getControllerRouter();

?>
<div class="col-md-2">
	<ul>
	<?php foreach( $galleries as $gallery ): ?>
		<li>
			<?php if($current_gallery && $current_gallery->getId()==$gallery->getId()): ?>
				<strong><?=$gallery->getTitle()?></strong>
			<?php else: ?>
				<a href="<?=$router->getEditOrViewURI( $gallery->getId() );?>"><?=$gallery->getTitle()?></a>
			<?php endif; ?>
		</li>
	<?php endforeach; ?>
	</ul>
</div>

