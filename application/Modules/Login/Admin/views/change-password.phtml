<?php
use Jet\Tr;
use Jet\Mvc_View;
use Jet\Form;

/**
 * @var Mvc_View $this
 * @var Form     $form
 */
$form = $this->getRaw( 'form' );

$form->setDefaultLabelWidth( [ Form::LJ_SIZE_MEDIUM => 2 ] );
$form->setDefaultFieldWidth( [ Form::LJ_SIZE_MEDIUM => 10 ] );
?>

<div class="card" style="margin-top: 40px;">
	<h5 class="card-header"><?=Tr::_( 'Please change your password' )?></h5>
	<?=$form->start()?>
	<div class="card-body">

		<?=$form->field( 'current_password' )?>
		<?=$form->field( 'password' )?>

		<div class="text-right">
			<input type="submit" value="<?=Tr::_( 'Change password' );?>" class="btn btn-primary"/>
		</div>
	</div>
	<?=$form->end()?>
</div>


