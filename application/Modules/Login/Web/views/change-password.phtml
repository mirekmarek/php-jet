<?php

use Jet\Tr;
use Jet\MVC_View;
use Jet\Form;

/**
 * @var MVC_View $this
 * @var Form $form
 */
$form = $this->getRaw( 'form' );

$form->setDefaultLabelWidth( [Form::LJ_SIZE_MEDIUM => 4] );
$form->setDefaultFieldWidth( [Form::LJ_SIZE_MEDIUM => 10] );
?>
<div style="margin-top:50px;" class="col-md-4 offset-md-4 col-sm-8 offset-sm-2">
	<h5 class="card-header"><?= Tr::_( 'Please change your password' ) ?></h5>
	<?= $form->start() ?>
	<div class="card-body">

		<?= $form->field( 'current_password' ) ?>
		<?= $form->field( 'password' ) ?>

		<div class="text-right">
			<input type="submit" value="<?= Tr::_( 'Change password' ); ?>" class="btn btn-primary"/>
		</div>
	</div>
	<?= $form->end() ?>
</div>

